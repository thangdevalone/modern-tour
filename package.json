{
  "name": "modern-tour",
  "version": "0.1.1",
  "description": "A beautiful, animated product tour library for React powered by Framer Motion",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:demo": "vite build --config vite.config.demo.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts,.tsx",
    "prepublishOnly": "pnpm build",
    "release": "changeset publish"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@testing-library/react": "^14.2.1",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "framer-motion": "^11.0.5",
    "jsdom": "^24.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.2",
    "vite-plugin-css-injected-by-js": "^3.4.0",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^1.3.0"
  },
  "keywords": [
    "react",
    "tour",
    "onboarding",
    "product-tour",
    "framer-motion",
    "animation",
    "walkthrough",
    "guide",
    "tooltip",
    "spotlight"
  ],
  "author": "thangdevalone",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thangdevalone/modern-tour.git"
  },
  "bugs": {
    "url": "https://github.com/thangdevalone/modern-tour/issues"
  },
  "homepage": "https://tour.modern-ui.org",
  "dependencies": {
    "@floating-ui/react": "^0.27.17",
    "@tailwindcss/vite": "^4.1.18",
    "clsx": "^2.1.1",
    "framer-motion": "^11.0.5",
    "lucide-react": "^0.563.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18"
  }
}